<p style="color: green"><%= notice %></p>
<div class="d-flex flex-column">
  <div class="m-5">
    <%= link_to "New food", new_food_path, class: 'btn btn-secondary float-end' %>
  </div>
  <div class="d-flex justify-content-center">
    <div id="foods">
      <% if false %>
      <% @foods.each do |food| %>
        <%= render food %>
        <p>
          <%= link_to "Show this food", food %>
        </p>
      <% end %>
      <% end %>
    </div>
    <table class="table w-75">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Measurement unit</th>
          <th scope="col">Unit price</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
        <tr>
          <th scope="row"><%= food.name %></th>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= button_to "DELETE", food, method: :delete, class: 'btn btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
